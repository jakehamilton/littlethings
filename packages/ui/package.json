        "@storybook/addon-links": "^6.5.5",
        "@storybook/addon-storysource": "^6.5.5",
        "@storybook/preact": "^6.5.5",
        "@types/tinycolor2": "^1.4.3",
        "babel-loader": "^8.2.2",
        "core-js": "^3.16.4",
        "preact-feather": "^4.2.1",
        "react-fast-compare": "^3.2.0",
