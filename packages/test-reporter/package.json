{
    "name": "@littlethings/test-reporter",
    "version": "2.0.1",
    "description": "Event reporter for @littlethings/test",
    "keywords": [
        "test",
        "framework",
        "littlethings",
        "utility",
        "library",
        "suite"
    ],
    "license": "Apache-2.0",
    "author": "Lily Skye <me@suchipi.com>",
    "exports": {
        ".": {
            "default": "./dist/cjs/index.js",
            "import": "./dist/es/index.js",
            "require": "./dist/cjs/index.js"
        }
    },
    "main": "./dist/cjs/index.js",
    "types": "./dist/cjs/index.d.ts",
    "scripts": {
        "build": "npm run build:esm && npm run build:cjs",
        "build:cjs": "tsc -p . --module commonjs --target es5 --outDir dist/cjs",
        "build:esm": "tsc -p . --module es2015 --target es5 --outDir dist/esm"
    },
    "dependencies": {
        "@littlethings/test-core": "2.0.1",
        "code-preview-from-error": "^1.0.2",
        "kleur": "^4.1.4",
        "pretty-print-error": "^1.1.0"
    },
    "devDependencies": {
        "typescript": "^4.9.3"
    },
    "publishConfig": {
        "access": "public"
    }
}
