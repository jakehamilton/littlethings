{
    "name": "@littlethings/test-core",
    "version": "3.1.0",
    "description": "APIs for describing and running automated test suites",
    "keywords": [
        "test",
        "framework",
        "littlethings",
        "utility",
        "library",
        "suite"
    ],
    "license": "Apache-2.0",
    "author": "Lily Skye <me@suchipi.com>",
    "exports": {
        ".": {
            "default": "./dist/cjs/index.js",
            "import": "./dist/es/index.js",
            "require": "./dist/cjs/index.js"
        }
    },
    "main": "./dist/cjs/index.js",
    "types": "./dist/cjs/index.d.ts",
    "scripts": {
        "build": "npm run build:esm && npm run build:cjs",
        "build:cjs": "tsc -p . --module commonjs --target es5 --outDir dist/cjs",
        "build:esm": "tsc -p . --module es2015 --target es5 --outDir dist/esm",
        "test": "vitest"
    },
    "devDependencies": {
        "typescript": "^4.9.3",
        "vite": "^3.2.5",
        "vitest": "^0.25.5"
    },
    "publishConfig": {
        "access": "public"
    }
}
