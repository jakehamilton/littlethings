{
    "name": "@littlethings/test-core",
    "version": "1.0.0",
    "description": "APIs for describing and running automated test suites",
    "keywords": [
        "test",
        "framework",
        "littlethings",
        "utility",
        "library",
        "suite"
    ],
    "license": "Apache-2.0",
    "author": "Lily Skye <me@suchipi.com>",
    "exports": {
        ".": {
            "default": "./dist/test-core.umd.js",
            "import": "./dist/test-core.es.js",
            "require": "./dist/test-core.cjs.js"
        }
    },
    "main": "./dist/test-core.umd.js",
    "types": "./dist/index.d.ts",
    "scripts": {
        "build": "npm run build:lib && npm run build:types",
        "build:lib": "vite build",
        "build:types": "tsc -p . --emitDeclarationOnly",
        "test": "vitest"
    },
    "devDependencies": {
        "typescript": "^4.5.5",
        "vite": "^2.8.2",
        "vitest": "^0.5.3"
    },
    "publishConfig": {
        "access": "public"
    }
}
